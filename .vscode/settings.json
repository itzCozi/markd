// Secret sauce for VSCode

{
  "editor.inlineSuggest.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "material-icon-theme",
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": true,
  "zenMode.hideLineNumbers": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  "remoteHub.commitDirectlyWarning": "off",
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": false,
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/Thumbs.db": false
  },
  "explorer.confirmDelete": false,
  "explorer.compactFolders": true,
  "explorer.enableDragAndDrop": true,
  "explorer.openEditors.visible": 3,
  "explorer.enableUndo": true,
  "explorer.openEditors.sortOrder": "editorOrder",
  "editor.roundedSelection": true,
  "editor.cursorStyle": "block",
  "editor.minimap.size": "proportional",
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": true,
  "editor.minimap.showSlider": "always",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "terminal.integrated.fontFamily": "consolas",
  "editor.fontFamily": "Fira Code Retina, consolas",
  "editor.fontWeight": "400",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero'",
  "editor.lineHeight": 1.495,
  "editor.fontSize": 13.45,
  "github.copilot.editor.enableAutoCompletions": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.autoSave": "afterDelay",
  "html.format.wrapLineLength": 90,
  "editor.multiCursorModifier": "ctrlCmd",
  "svelte.enable-ts-plugin": true,
  "editor.wrappingStrategy": "advanced",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.autoIndent": "advanced",
  "editor.autoSurround": "brackets",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingComments": "always",
  "editor.autoClosingQuotes": "always",
  "editor.colorDecorators": true,
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.comments.insertSpace": true,
  "editor.wordWrap": "on",
  "diffEditor.wordWrap": "on",
  "editor.wordWrapColumn": 60,
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.rulers": [90],
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.renderFinalNewline": "dimmed",
  "chat.editor.wordWrap": "on",
  "editor.formatOnSaveMode": "file",
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveIndentation": "always",
  "RainbowBrackets.colorMode": "Independent",
  "RainbowBrackets.forceUniqueOpeningColor": true,
  "RainbowBrackets.showVerticalScopeLine": false,
  "RainbowBrackets.showHorizontalScopeLine": false,
  "RainbowBrackets.depreciation-notice": false,

  // git
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.autofetchPeriod": 200,

  // prettier
  "prettier.trailingComma": "all",
  "prettier.singleQuote": false,
  "prettier.insertPragma": true,
  "prettier.requirePragma": true,
  "prettier.embeddedLanguageFormatting": "auto",
  "prettier.bracketSameLine": true,
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "always",
  "prettier.jsxSingleQuote": false,
  "prettier.quoteProps": "as-needed",
  "prettier.proseWrap": "always",
  "prettier.useTabs": false,
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.singleAttributePerLine": true,
  "prettier.semi": true,
  "workbench.productIconTheme": "fluent-icons",
  "less.format.spaceAroundSelectorSeparator": true,
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.list.smoothScrolling": true,
  "workbench.reduceMotion": "off",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 9
}
